# System
alias vi="vim"
alias cport="sudo lsof -nP -iTCP:1025 -sTCP:LISTEN"
alias l="ls -la"

# Navigation
alias d="cd ~/.dotfiles"
alias s="cd ~/Sites"
alias b="cd ~/Sites/bergamotte"
alias c="cd ~/Sites/creolecorner/"
alias h="cd ~/Sites/happydemics2"
alias w="cd ~/Sites/workstation"
alias wc="cd ~/Sites/workstation/client"
