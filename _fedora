sudo dnf update

curl -sS https://starship.rs/install.sh | sh

sudo dnf install ghostty
sudo dnf install stow
sudo dnf install vim

# Flatpak
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

flatpak install flathub org.videolan.VLC

# ASDF
ASDF_INSTALL_DIR="$HOME/.asdf"
if [ -d "$ASDF_INSTALL_DIR" ]; then
    echo "ASDF directory '$ASDF_INSTALL_DIR' already exists. Skipping cloning."
else
    echo "ASDF directory '$ASDF_INSTALL_DIR' does not exist. Proceeding with installation."
    git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.14.0
fi

# Install NodeJS, Python using ASDF
asdf plugin add nodejs https://github.com/asdf-vm/asdf-nodejs.git
asdf install nodejs 22.14.0
asdf global nodejs 22.14.0

asdf plugin add python https://github.com/asdf-community/asdf-python.git
asdf install python 3.13.4
asdf global python 3.13.4

# Clean files and folders before stowing
rm ~/.bash_profile
rm ~/.bashrc

stow bash
stow shared
