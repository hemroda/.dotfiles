# System
alias l="ls -la"
alias cport="sudo lsof -nP -iTCP:1025 -sTCP:LISTEN"
alias vi="vim"
alias clean_packer="rm -rf ~/.local/share/vim/site/pack/packer/start/*"

# Navigation
alias d="cd ~/.dotfiles"
alias s="cd ~/Sites"
alias c="cd ~/Sites/creolecorner/"
alias ma="cd ~/Sites/maavita"
alias la="cd ~/Sites/laterite"
alias rm="cd ~/Sites/rubymine"
alias py="cd ~/Sites/pystation"
