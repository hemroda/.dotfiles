{
  "er": {
    "prefix": ["er"],
    "body": [
      "<% $1 %>"
    ]
  },
  "er=": {
    "prefix": ["er="],
    "body": [
      "<%= $1 %>"
    ]
  },
  "end": {
    "prefix": ["end"],
    "body": [
      "<% end %>"
    ]
  },
  "if": {
    "prefix": ["if"],
    "body": [
      "<% if $1 %>"
    ]
  },
  "link": {
    "prefix": ["link_to"],
    "body": [
      "<%= link_to $1, , class: \"text-decoration-none\" %>"
    ]
  },
  "each": {
    "prefix": [".each do"],
    "body": [
      "<% $1.each do |$2| %>",
      "\t<%= $3 %>",
      "<% end %>"
    ]
  },
  "div": {
    "prefix": ["div"],
    "body": [
      "<div>$1</div>"
    ]
  },
  "span": {
    "prefix": ["span"],
    "body": [
      "<span>$1</span>"
    ]
  },
  "p": {
    "prefix": ["p"],
    "body": [
      "<p>$1</p>"
    ]
  },
  "th": {
    "prefix": ["th"],
    "body": [
      "<th>$1</th>"
    ]
  },
  "td": {
    "prefix": ["td"],
    "body": [
      "<td>$1</td>"
    ]
  },
  "tr": {
    "prefix": ["tr"],
    "body": [
      "<tr>$1</tr>"
    ]
  },
  "class": {
    "prefix": ["class"],
    "body": [
      "class=\"$1\""
    ]
  },
  "XClass": {
    "prefix": ["xclass"],
    "body": [
      "/**",
      " * @author ${VIM:\\$USER}",
      " */",
      "class $1 ${2:extends ${3:Parent} }{",
      "\tconstructor() {",
      "\t\t$0",
      "\t}",
      "}"
    ],
    "description": "Class definition template."
  }
}
